<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.blastmotion.app.baseballmock.ActionDetailActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/fab_holder"
        android:background="#80000000"
        android:visibility="gone"
        />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/fab_holder"
    >


 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"

     >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_main_metric_title"
        android:text="Swing Speed"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:textColor="#57000000"

        />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/ic_action_play"
        fab:fab_colorNormal="#FF4081"
        fab:fab_colorPressed="#F50057"
        android:layout_alignTop="@id/textView_main_metric_title"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-32dp"
        android:elevation="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_main_metric"
        android:layout_below="@id/textView_main_metric_title"
        android:text="75 mph"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/firstDivider"
        android:background="#0C000000"
        android:layout_below="@id/textView_main_metric"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_second_metric_title"
        android:text="Swing Level"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/firstDivider"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_second_metric"
        android:layout_below="@id/textView_second_metric_title"
        android:text="Down"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0C000000"
        android:layout_below="@id/textView_second_metric"
        android:id="@+id/secondDivider"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_third_metric_title"
        android:text="Dowswing Time"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/secondDivider"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_third_metric"
        android:layout_below="@id/textView_third_metric_title"
        android:text="0.28 seconds"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0C000000"
        android:layout_below="@id/textView_third_metric"
        android:id="@+id/thirdDivider"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_fourth_metric_title"
        android:text="Wrist Release"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/thirdDivider"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_fourth_metric"
        android:layout_below="@id/textView_fourth_metric_title"
        android:text="220Â°"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />








</RelativeLayout>
 </ScrollView>
</RelativeLayout>
</android.support.v7.widget.CardView>
