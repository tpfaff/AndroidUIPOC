<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.blastmotion.app.baseballmock.ActionDetailActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/sport_image"
        android:src="@drawable/sport_image"
        android:background="#FFAABBCC"
        android:scaleType="center"
        />

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/sport_image"
     >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/sport_image"
    android:elevation="4dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_main_metric_title"
        android:text="Swing Speed"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_main_metric"
        android:layout_below="@id/textView_main_metric_title"
        android:text="75 mph"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/firstDivider"
        android:background="#0C000000"
        android:layout_below="@id/textView_main_metric"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_second_metric_title"
        android:text="Swing Level"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/firstDivider"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_second_metric"
        android:layout_below="@id/textView_second_metric_title"
        android:text="Down"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0C000000"
        android:layout_below="@id/textView_second_metric"
        android:id="@+id/secondDivider"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_third_metric_title"
        android:text="Dowswing Time"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/secondDivider"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_third_metric"
        android:layout_below="@id/textView_third_metric_title"
        android:text="0.28 seconds"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0C000000"
        android:layout_below="@id/textView_third_metric"
        android:id="@+id/thirdDivider"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_fourth_metric_title"
        android:text="Wrist Release"
        android:textSize="32sp"
        android:paddingStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/thirdDivider"
        android:textColor="#57000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_fourth_metric"
        android:layout_below="@id/textView_fourth_metric_title"
        android:text="220Â°"
        android:textColor="#39000000"
        android:textSize="28sp"
        android:gravity="end"
        android:paddingStart="16dp"
        />








</RelativeLayout>
 </ScrollView>
</RelativeLayout>
</android.support.v7.widget.CardView>
