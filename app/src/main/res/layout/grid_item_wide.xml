<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="348dp" android:layout_height="228dp"
    android:background="#ff5983ff"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/titleTextAppearance"
        android:text="75\nmph"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:textSize="45sp"
        android:textColor="#EEEEEEEE"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/sport_image"
        android:background="#BBDEFB"
        android:src="@drawable/sport_image"
        android:scaleType="center"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#2196f3"
        android:layout_alignParentBottom="true"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="75 Mph"
        android:id="@+id/textView_main_metric"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:textColor="#EEEEEEEE"
        android:layout_alignTop="@+id/view"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3/2/15"
        android:id="@+id/textView3"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:textColor="#EEEEEEEE"
        android:paddingTop="2dp"
        android:layout_below="@id/textView_main_metric"
        android:layout_alignParentStart="true" />

</RelativeLayout>